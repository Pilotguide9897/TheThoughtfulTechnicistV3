<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>The Thoughtful Technicist</title>
    <head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Josefin+Sans:ital,wght@0,300;1,400&family=Montserrat:wght@500&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inconsolata&display=swap" rel="stylesheet">
</head>

    <link href="css/reset.css" rel="stylesheet"/>
    <link href="css/style.css" rel="stylesheet"/>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
  </head>
  <body>
    <header>
      <nav class="navbar navbar-dark bg-warning navbar-expand-md">
        <div class="container-fluid collapse navbar-collapse">
          <i class="fa-solid fa-laptop-code fa-2xl"></i>
          <a class="navbar-brand" id="title-text" href="/">The Thoughtful
            Technicist: A Web Development Blog</a>
          <button
            class="navbar-toggler"
            data-bs-toggle="collapse"
            data-bs-target="#nav"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="nav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link active navbar-text" aria-current="page" href="/">Home</a>
              </li>
              <li class="nav-item">
                {{#if logged_in}}
                  <a class="nav-link active navbar-text"
                  aria-current="page"
                  href="/dashboard"
                >Dashboard</a>
                {{else}}
                  <a class="nav-link active navbar-text"
                  aria-current="page"
                  href="/login"
                >Dashboard</a>
                {{/if}}
              </li>
              <li class="nav-item">
                {{#if logged_in}}
                <a class="nav-link active navbar-text" href="" id="logout">Log Out</a>
                {{else}}
                <a class="nav-link active navbar-text" href="/login">Log In</a>
                {{/if}}
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    
    <main class="container container-fluid mt-5">
      {{{ body }}}
    </main>

    <footer>
      <br>
      <div class="myFooter">
        <p class="post-body-text" id="difficultParagraph">At the Thoughtful Technicist, we value respectful discourse and encourage our readers to engage in thoughtful and constructive discussions in the comments section. We ask that you refrain from using derogatory language or making personal attacks on others. Let's create a welcoming community where everyone's opinions are respected and appreciated.</p> 
      </div>
    </footer>

<!-- Scripts Section -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4"
      crossorigin="anonymous">
    </script>
    <script src="https://kit.fontawesome.com/83fee9227b.js" crossorigin="anonymous"></script>
    <script src="/js/login.js"></script>
    <script src="/js/signup.js"></script>
    {{!-- <script src="/js/logout.js"></script> --}}
    <script src="/js/comment.js"></script>
    <script src="/js/newPost.js"></script>
    <script src="/js/edit.js"></script>
    <script src="/js/delete.js"></script>
    <script src="/js/post.js"></script>
     <!-- Render script for logged in users only -->
    {{#if logged_in}}
    <script src="/js/logout.js"></script>
    {{/if}}
  </body>
</html>