<div class="blogPosts">
  {{#each blogpostData}}
    <br>
    <div class="post bg-lightblue" data-href="/post/{{id}}" data-post-id="{{id}}">
      <h2 class="post-title-text">{{title}}</h2>
      <p class="post-body-text">{{post_content}}</p>
      <p class="post-body-text">Posted by <i class="fa-solid fa-user"></i> <span class="bold-text">{{Blogger.username}}</span> on <i class="fa-solid fa-calendar"></i> <span class="bold-text">
        {{format_date createdAt}}.</span></p>
      <button type="button" class="btn btn-secondary homepage-viewIndividualPost">View Post</button>
      <br>
      <br>
    </div>
  {{/each}}
</div>
